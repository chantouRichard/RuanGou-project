<Page x:Class="frontend.Views.Pages.CloudRemindPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:frontend.Views.Pages"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="CloudRemindPage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- 左侧：番茄钟 + 倒计时 -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 番茄钟部分 -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="番茄钟" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                        <TextBlock Text="工作时间(分钟):" VerticalAlignment="Center"/>
                        <TextBox x:Name="WorkTimeTextBox" Width="40" Text="25" Margin="5,0,20,0" />
                        <TextBlock Text="休息时间(分钟):" VerticalAlignment="Center"/>
                        <TextBox x:Name="RestTimeTextBox" Width="40" Text="5" Margin="5,0,0,0" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                        <TextBlock Text="剩余时间：" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PomodoroTimeTextBlock" Text="25:00" FontSize="18" FontWeight="SemiBold" Foreground="Red" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="PomodoroStatusTextBlock" Text="状态：等待开始" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <Button x:Name="PomodoroStartButton" Content="开始" Width="80" Margin="0,0,10,0" Click="PomodoroStartButton_Click"/>
                        <Button x:Name="PomodoroPauseButton" Content="暂停" Width="80" Margin="0,0,10,0" Click="PomodoroPauseButton_Click" IsEnabled="False"/>
                        <Button x:Name="PomodoroResetButton" Content="重置" Width="80" Click="PomodoroResetButton_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- 倒计时部分 -->
                <StackPanel Grid.Row="1" >
                    <TextBlock Text="倒计时" FontSize="24" FontWeight="Bold" Margin="0,0,0,15" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBox x:Name="CountdownInputTextBox" Width="100" />
                        <Button x:Name="CountdownStartButton" Content="开始" Width="80" Margin="10,0,0,0" Click="CountdownStartButton_Click" />
                        <Button x:Name="CountdownPauseButton" Content="暂停" Width="80" Margin="10,0,0,0" Click="CountdownPauseButton_Click" IsEnabled="False"/>
                        <Button x:Name="CountdownResetButton" Content="重置" Width="80" Margin="10,0,0,0" Click="CountdownResetButton_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="CountdownTimeTextBlock" Text="剩余：0s" FontSize="18" FontWeight="SemiBold" Foreground="Blue" />

                </StackPanel>
            
        </Grid>
        
    
        <!-- 右侧：倒数日 + 书籍推荐 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 倒数日 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="倒数日" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                <ListView x:Name="CountdownDaysListView" Height="150">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Margin="0,0,10,0"/>
                                <TextBlock Text="剩余：" />
                                <TextBlock Text="{Binding DaysLeft}" />
                                <TextBlock Text=" 天" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- 书籍推荐 -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="书籍推荐" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                <ListView x:Name="BooksListView" Height="150">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
