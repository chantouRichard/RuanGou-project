<Window x:Class="frontend.Views.FloatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FloatingWidget" 
        Height="120" Width="280"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent" 
        Topmost="True"
        ResizeMode="NoResize">

    <!-- 圆角外层容器 -->
    <Border CornerRadius="25">
        <!-- 线性渐变背景 -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF4A90E2" Offset="0"/>
                <!-- 蓝色 -->
                <GradientStop Color="#FFEA4695" Offset="1"/>
                <!-- 粉紫 -->
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- 标题栏，用于拖动窗口 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 悬浮内容区域 -->
            <ContentControl Grid.Row="0" Content="📌 待办提醒" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Foreground="White"
                            FontSize="16"/>

            <!-- 图钉按钮 -->
            <Button x:Name="btnPin" 
                    Content="📌" 
                    Click="TogglePin"
                    Width="30" Height="30" 
                    Background="Transparent"
                    Foreground="White"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    Padding="0"
                    Margin="0,-5,0,0"/>
        </Grid>
    </Border>
</Window>